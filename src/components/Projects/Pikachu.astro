---
import P2Button from "../UI/P2Button.astro";
---

<style lang="scss">
  article {
    display: flex;
    height: 22rem;
    background-color: #ffe62d;
    border-radius: 20px;
    padding: 2rem 2.5rem;
    margin: 2rem 5rem 2rem 2rem;

    .text {
      width: 50%;
      padding: 0 1rem;
      position: relative;

      h4 {
        margin: 3rem 0;
        font-size: 2rem;
        text-align: center;
        color: var(--blue-dark-1);
      }

      a {
        font-weight: 700;
        // color: #4a4857;
        color: #797690;

        &:hover {
          color: #435891;
          cursor: pointer;
        }
      }

      img {
        width: 150px;
        pointer-events: none;
      }

      .arrow {
        position: absolute;
        right: 0;
        top: 130px;
        width: 90px;
        transform: rotate(-20deg);
      }

      .buttons {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 1rem;

        button {
          border: 3px solid var(--blue-dark-1);
          padding: 0.5rem;
          background-color: #ffe62d;
          font-size: 1.1rem;
          font-weight: 600;
          border-radius: 10px;

          &:first-child {
            margin-right: 15px;
          }
        }
      }
    }

    .visuals {
      width: 50%;
      display: flex;
      align-items: center;
      justify-content: center;

      img {
        width: 90%;
        border-radius: 10px;
        pointer-events: none;
      }
    }
  }
</style>

<article>
  <div class="text">
    <header>
      <img src="../../../images/pokemon logo.svg" alt="Pokemon Logo" />
    </header>
    <h4>"CSS Drawing"</h4>
    <img class="arrow" src="../../../images/Asset 5.svg" alt="arrow" />
    <a>Learn more...</a>
    <div class="buttons">
      <P2Button text="View Drawing" />
      <P2Button text="Source Code" />
    </div>
  </div>
  <div class="visuals">
    <img src="../../../images/Pikachu1.png" alt="pikachu drawing" />
  </div>
</article>
