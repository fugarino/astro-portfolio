---
import SectionLayout from "../../layouts/SectionLayout.astro";
import Skill from "./Skill";
---

<style lang="scss">
  .grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    list-style: none;
    margin: 3rem;

    li {
      height: 8rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      i {
        font-size: 3rem;
        margin-bottom: 1rem;
      }

      svg {
        width: 50px;
        height: 50px;
        margin-bottom: 0.7rem;
      }

      h4 {
        font-size: 0.9rem;
        font-weight: 500;
      }
    }
  }
</style>

